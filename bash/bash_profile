# refer, https://github.com/ruanyf/fortunes
function run_fortune() {
  if [[ -n "$SKIP_FORTUNE" ]]; then
    return
  fi

  if [[ ! -x "$(command -v fortune)" ]]; then
    # brew install fortune
    return
  fi

  # echo "=============== Quote Of The Day ==============="
  echo

  # if [[ -x "$(command -v lolcat)" ]]; then
  #   fortune | lolcat
  # else
  #   fortune
  # fi

  fortune

  # echo "================================================"
  printf "\n"
}

run_fortune

