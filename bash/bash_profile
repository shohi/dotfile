# change iTerm2 profile from command line
# Usage: it2prof ProfileName (case sensitive)
# https://coderwall.com/p/s-2_nw/change-iterm2-color-profile-from-the-cli
function it2prof() {
  echo -e "\033]50;SetProfile=$1\a"
}


