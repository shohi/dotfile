#######################################################################
#                            Daily Update                             #
#######################################################################

function daily_update() {
  # update brew
  brew update && brew upgrade

  # rustup & cargo updates
  rustup update && cargo install-update -a

  # nim updates
  choosenim update self && choosenim update devel && choosenim update stable
}
