# NOTE: load `~/.bashrc` first which contains personal sensitive setting
[[ -f "$HOME/.bashrc" ]] && source "$HOME/.bashrc"

function pushd_q() {
  pushd -q "$@"
}

function popd_q() {
  popd -q "$@"
}

